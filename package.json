{
  "name": "react-flexr",
  "version": "3.0.0-beta.4",
  "description": "React flexbox grid made simple.",
  "author": {
    "name": "Kodyl ApS"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kodyl/react-flexr.git"
  },
  "bugs": {
    "url": "https://github.com/kodyl/react-flexr/issues"
  },
  "homepage": "https://github.com/kodyl/react-flexr#readme",
  "keywords": [
    "react",
    "grid",
    "flex",
    "flexbox",
    "react-component"
  ],
  "jsnext:main": "index.es.js",
  "main": "index.js",
  "module": "index.es.js",
  "scripts": {
    "prebuild": "yarn lint && yarn test:src",
    "build": "yarn clean && yarn dist && yarn test:build && yarn bundle && yarn extract-styles",
    "bundle": "NODE_ENV=production rollup -c rollup.config.js",
    "clean": "rm -rf ./dist",
    "dev": "node ./example/server.js",
    "dist": "BABEL_ENV=commonjs NODE_ENV=production babel lib --out-dir dist --copy-files",
    "example:ssr": "babel-node ./example/ssr.js",
    "extract-styles": "node -p \"var s = require('stilr').default; var b = require('./dist'); s.render({}, b.stylesheet)\" > ./styles.css",
    "lint": "eslint lib/",
    "prerelease": "npm run build",
    "release": "np",
    "test:build": "NODE_ENV=test mocha --require dist/__tests__/testdom ./dist/__tests__/*.test.js",
    "test:src": "NODE_ENV=test mocha --compilers js:@babel/register --require lib/__tests__/testdom ./lib/__tests__/*.test.js"
  },
  "dependencies": {
    "@babel/runtime": "^7.7.7",
    "prop-types": "^15.6.0",
    "stilr": "^2.0.0-0"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/node": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/plugin-syntax-import-meta": "^7.0.0",
    "@babel/plugin-transform-react-constant-elements": "^7.0.0",
    "@babel/plugin-transform-react-inline-elements": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.0.0",
    "babel-eslint": "^9.0.0",
    "babel-loader": "^8.0.0",
    "babel-plugin-add-module-exports": "1.0.2",
    "eslint": "^4.12.0",
    "eslint-plugin-react": "^7.5.1",
    "jsdom": "^9.12.0",
    "mocha": "^3.2.0",
    "np": "5.2.1",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-hot-loader": "^3.1.3",
    "rollup": "1.29.0",
    "rollup-plugin-babel": "^5.0.0-alpha.1",
    "rollup-plugin-commonjs": "10.1.0",
    "rollup-plugin-node-resolve": "5.2.0",
    "rollup-plugin-replace": "^2.2.0",
    "webpack": "^3.8.1",
    "webpack-dev-server": "^2.9.5"
  },
  "peerDependencies": {
    "react": ">=0.11.0"
  }
}
